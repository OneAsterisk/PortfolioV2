@charset "UTF-8";
/* Custom Fonts for the AppShell */
@font-face {
  font-family: "coolvetica rg", "Gill Sans", "Gill Sans MT", Calibri,
    "Trebuchet MS", sans-serif;
  src: url(".\fonts\coolvetica rg.otf");
}
a {
  color: #E0E1DD;
}
a:hover {
  text-decoration: none;
  color: #778DA9;
}
a:visited {
  text-decoration: none;
}
a:focus {
  border: 1px solid #0D1B2A;
  border-radius: 0.5px;
}
@supports (-webkit-overflow-scrolling: touch) {
  .nav-bar-main {
    position: fixed;
  }

  body {
    -webkit-overflow-scrolling: touch;
  }
}
.full-bleed {
  top: 0px;
  box-shadow: 0 0 0 100vmax rgba(13, 27, 42, 0.5);
  clip-path: inset(0 -100vmax);
}
#navbar.full-bleed {
  top: 0px;
  box-shadow: 0 0 0 100vmax rgba(13, 27, 42, 1);
  clip-path: inset(0 -100vmax);
}
.main-body {
  text-align: center;
  color: #E0E1DD;
  background-color: #1B263B;
}
.title-container {
  width: 100%;
  top: -10px;
  position: relative;
  display: flex;
  background-color: rgba(13, 27, 42, 0.5);
  align-items: center;
  justify-content: center;
  justify-items: left;
  align-items: center;
  display: flex;
}
.activities-list {
  justify-content: left;
}
.main-header {
  justify-content: flex-start;
  position: relative;
  top: -10px;
  display: flex;
  max-width: 80rem;
  align-items: center;
  flex-direction: column;
  /* background: rgba(13, 27, 42, 1); */
  text-align: left;
  margin-bottom: 0px;
  margin-top: 0px;
  padding-right: 45px;
}
.title-container img {
  max-width: 64px;
  max-height: 64px;
  padding-top: 1.8rem;
  padding-bottom: 1rem;
}
.main-header h1,
.main-header p {
  margin-top: 0.635rem;
  margin-bottom: 0.635rem;
}
.main-header h1 {
  padding-top: 1.3rem;
}
h1,
h2,
p {
  font-family: Arial;
}
.contact-info-form {
  display: flex;
  box-sizing: border-box;
  border: #0D1B2A outset 1px;
  border-radius: 1rem;
  max-width: 34.875rem;
}
/*
  Project Container Stuff and Things
*/
.project-container {
  margin-top: 2rem;
  box-sizing: border-box;
  display: flex;
  gap: 3rem;
  flex-flow: row wrap;
  justify-content: center;
}
.project-preview {
  align-items: center;
  overflow: hidden;
  width: 21rem;
  min-height: 30rem;
  max-height: fit-content;
  border-radius: 8px;
  border-color: #0D1B2A;
  border-width: 3px;
  border-style: outset;
  display: flex;
  flex-direction: column;
  color: #E0E1DD;
  overflow-wrap: normal;
}
.project-preview img {
  position: relative;
  margin-top: 5rem;
}

.project-preview p {
  text-indent: 1rem;
  overflow-wrap: normal;
  margin-top: 15rem;
  max-width: 19rem;
}
.project-container a {
  text-decoration: none;
}
.project-container a:hover {
  text-decoration: underline;
}

.bigletters {
  text-transform: uppercase;
}
.MTU {
  color: #778DA9;
  text-decoration: solid;
}
.nav-bar {
  display: flex;
  flex-direction: row;
  background-color: #1B263B;
  max-width: 84rem;
  margin: auto 0.625rem;
  border-color: #E0E1DD;
  border-style: solid;
}

.nav-bar-main {
  width: 100%;
  max-width: 100%;
  max-height: 3rem;
  position: sticky;
  top: 0;
  z-index: 999;
  margin-top: -10px;
  flex: 50%;
  background-color: rgba(13, 27, 42, 1);
}

.nav-bar-item {
  font-family: Arial;
  color: #E0E1DD;
  text-align: center;
  padding: 0.3125rem 0.625rem;
  text-decoration: none;
  transition: background-color 0.25s ease-in-out;
}
.main {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.desc-text {
  text-align: center;
  max-width: 56.25rem;
}
.section-header {
  text-transform: uppercase;
}
.nav-bar-item:hover,
.nav-bar-item:focus {
  background-color: #1B263B;
  color: #0D1B2A;
  border: none;
}

@media screen and (max-width: 600px) {
  .contact-form {
    max-width: 50%;
  }
}
.contact-form {
  display: flex;
}
.contact-info {
  align-items: center;
  font-size: 1rem;
  padding-left: 1rem;
}
.contact-info a {
  color: #E0E1DD;
  text-decoration: underline;
  font-weight: bold;
}
.contact-info a:hover {
  color: #415A77;
}

.contact-info a:visited {
  color: #E0E1DD;
}
.contact-info p {
  margin-right: 1rem;
  text-align: left;
}
@media screen and (max-width: 600px) {
  .nav-bar-main {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: auto;
    max-height: none;
    margin-top: 0;
    padding: 10px 0;
  }

  .nav-bar-item {
    display: block;
    padding: 10px 0;
  }
}
hr {
  width: 100vw;
  margin-left: calc(-25vw + 25%);
  margin-right: calc(-25vw + 25%);
}
